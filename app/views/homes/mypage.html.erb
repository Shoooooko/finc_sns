<h3><%="[ #{@pageuser.name}さんの投稿一覧 ]"%></h3>
<% if @profile != nil %>
  <p>
    <strong>mypicture</strong>
    <%= image_tag(@profile.picture_url) if @profile.picture.present? %>
  </p>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @mypost.each do |mypost| %>
      <tr>
        <td><%= mypost.title %></td>
        <td><%= mypost.body %></td>
        <td colspan="2"></td>
        <% if @pageuser.id == @user.id%>
        <td><%= link_to 'Show', mypost %></td>
        <td><%= link_to 'Edit', edit_post_path(mypost) %></td>
        <td><%= link_to 'Destroy', mypost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to('Mypage', homes_mypage_path) %>
<%= link_to('Post一覧', posts_path) %>
<% if @pageuser.id == @user.id%>
  <p class="text-right"><%= link_to 'New Post', new_post_path %></p>
  <%= link_to('Profile設定', new_user_profile_path(@user.id)) %>
  <%= link_to('設定', new_user_setting_path(@user.id)) %>
<% end %>
<%= link_to('User一覧', users_path) %>

