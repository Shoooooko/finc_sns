<h1>Timeline of others</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @f_posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= form_with url: create_follow_path do |form| %>
        <%= form.hidden_field :follower, value: current_user.id %>
        <%= form.hidden_field :followed, value: post.user_id %>
        <%= form.submit("フォローする")%>
        <% end %></td>
        <td colspan="2"></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', follows_path %>