<h1>Users一覧</h1>
<table class="table">
  <tbody>
    <% if @friend.any?%>
        <% @friend.each do |user| %>
            <tr>
            <td><%= user.name %></td>
                <td><%= form_with(url: follow_path(user.id),method: :delete) do |form| %>
                <!%= form.hidden_field :follower, value: current_user.id %>
                <%= form.hidden_field :followed, value: user.id %>
                <%= form.submit("フォローをやめる")%>
                <% end %></td>
                <td><%= link_to "詳細ページへ", user_path(user.id) %></td>
            </tr>
        <% end %>
    <% end %>

    <% if @followed.any?%>
      <% @followed.each do |user| %>
        <tr>
        <td><%= user.name %></td>
              <td><%= form_with(url: follow_path(user.id),method: :delete) do |form| %>
              <%= form.hidden_field :followed, value: user.id %>
              <%= form.submit("フォローをやめる")%>
              <% end %></td>
        </tr>
      <% end %>
    <% end %>

    <% if @nonfollowed.any?%>
        <%@nonfollowed.each do |user|%>
          <tr>
          <td><%= user.name %></td>
          <td><%= form_with url: follows_path do |form| %>
          <%= form.hidden_field :followed, value: user.id %>
          <%= form.submit("フォローする")%>
          <% end %></td>
          <td><%= link_to "詳細ページへ", user_path(user.id) %></td>
          </tr>
        <% end %>
    <% end %>

    <% if @stranger.any?%>
        <%@stranger.each do |user|%>
            <% if user!=@user%>
            <tr>
            <td><%= user.name %></td>
            <td><%= form_with url: follows_path do |form| %>
            <%= form.hidden_field :followed, value: user.id %>
            <%= form.submit("フォローする")%>
            <% end %></td></tr>
            <% end %>
        <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to('MYpage', homes_mypage_path)%>