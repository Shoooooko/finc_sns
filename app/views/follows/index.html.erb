<h1>Users一覧</h1>
<table class="table">
  <tbody>
    <!% @nonfollows.each do |n| %>

    <% @users.each do |user| %>
      <tr>  
      <td><%= user.name %></td>
      <% @followers.each do |f|%>
        <% if f == user%>
          <td><%= form_with url: follow_path(f.id) do |form| %>
          <%= form.hidden_field :followed, value: user.id %>
          <%= form.submit("詳細ページへ")%>
          <% end %></td>
          <td><%= form_with (url: follow_path,method: :delete) do |form| %>
          <!%= form.hidden_field :follower, value: current_user.id %>
          <%= form.hidden_field :followed, value: user.id %>
          <%= form.submit("フォローをやめる")%>
          <% end %></td>
          <%break%>
          <td><%= form_with url: follows_path do |form| %>
          <%= form.hidden_field :followed, value: user.id %>
          <%= form.submit("フォローする")%>
          <% end %></td>
        <% end %>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to('MYpage', homes_mypage_path)%>  
