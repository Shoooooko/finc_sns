<% if user_signed_in? %>
  <%= link_to('Mypage', user_path) %>
<% else %>
  <%= link_to('Login', new_user_session_path) %>  
<% end %>

<p>
<strong>User:</strong>
<%= @postuser.name %>さんの投稿
<%= link_to("#{@postuser.name}さんのpage", user_path(id: @postuser.id)) %>
</p>

<p>
<strong>Title:</strong>
<%= @post.title %>
</p>

<p>
<strong>Body:</strong>
<%= @post.body %>
</p>

<p>
<strong>Image</strong>
<%if @images.any? %>
  <p>
  <% @images.each do |image| %>
    <%= image_tag(image.image_url,:size => "200x150") if image.image.present? %>
  <% end %>
  </p>
<% end %>
</p>
<% if @user.id == @post.user_id %>
  <%= link_to 'Edit', edit_post_path(@post) %>
  <%= link_to('Delete', posts_path(@post), method: :delete) %>
<% end %>
<br>
<%= link_to 'Back', posts_path %>
<%= link_to 'Show_comments', post_comments_path(@post) %>
